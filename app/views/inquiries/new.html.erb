<!-- app/views/inquiry/new.html.erb -->
<% content_for :meta_title, "Chi Dok Che | Anfragen" %>
<% content_for :meta_description, "Hier kÃ¶nnen sie eine Nachricht oder Anfrage stellen" %>

<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			
			<h2>Anfrage erstellen</h2>
			<br>

				<%= simple_form_for(@inquiry) do |f| %>
					
					<div class="form-group">
						<%= f.label :email, "Emailadresse" %>
						<%= f.email_field :email, class: 'form-control' %> 
					</div>

					<!-- <div class="form-group">
						<%#= f.label :name, "Name (optional)" %>
						<%#= f.text_field :name, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%#= f.label :subject, "Betreff (optional)" %>
						<%#= f.text_field :subject, class: 'form-control' %> 
					</div> -->

					<div class="form-group trix">
						<%= f.label :content, "Nachricht" %>
						<%= f.rich_text_area :content, class: 'form-control' %> 
					</div>
					
					<!-- Error messages -->
					<% if @inquiry.errors.any? %>
						<div class="errors-container">
							<ul>
							  <% @inquiry.errors.full_messages.each do |message| %>
							    <li><%= message %></li>
							  <% end %>
							</ul>
						</div>
					<% end %>
					<br>
					<%= f.button :submit, "Anfrage abschicken", class: 'btn btn-ghost' %>

				<% end %>

				<%= link_to "", root_path, id: "delete-link", class: "hidden" %>

				<br>

		</div>
	</div>	
</div>

